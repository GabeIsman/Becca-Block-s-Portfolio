%header#main-area-header
  %hgroup
    %h1 Listing pages

%table
  %tr
    %th Title
    %th
    %th
    %th

  - @pages.each do |page|
    %tr
      %td= page.title
      %td= link_to 'Show', page
      %td= link_to 'Edit', edit_page_path(page)
      %td= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete

%footer#main-area-footer
  %nav#bottom-nav
    %ul#bottom-menu
      %li.main_area_footer_li= link_to 'New Page', new_page_path
