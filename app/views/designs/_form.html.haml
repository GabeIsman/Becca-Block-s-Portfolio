= form_for @design, :html => { :multipart => true } do |f|
  -if @design.errors.any?
    #error_explanation
      %h2= "#{pluralize(@design.errors.count, "error")} prohibited this design from being saved:"
      %ul
        - @design.errors.full_messages.each do |msg|
          %li= msg

  = f.label :main_image
  = f.fields_for :image do |image_fields|
    = image_fields.file_field :image
  = f.label :details
  = f.fields_for :details do |details_fields|
    = details_fields.file_field :image

  .actions
    = f.submit 'Save'

